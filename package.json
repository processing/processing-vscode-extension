{
	"name": "processing-vscode-extension",
	"version": "0.0.0",
	"publisher": "processing-foundation",
	"displayName": "Processing",
	"description": "The easiest way to create and run Processing sketches in VSCode. With syntax highlighting, code completion, error checking, and more.",
	"author": "Processing Foundation",
	"license": "LGPL-2.1-or-later",
	"repository": {
		"type": "git",
		"url": "https://github.com/processing/processing-vscode-extension"
	},
	"icon": "media/processing-logo.png",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"processing",
		"processingOrg",
		"pde",
		"language",
		"lsp",
		"language-server",
		"sketch",
		"arduino",
		"p5js",
		"p5",
		"p5.js",
		"java",
		"development",
		"creative-coding",
		"learning"
	],
	"sponsor": {
		"url": "https://github.com/processing"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onStartupFinished",
		"workspaceContains:**/*.pde"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
			{
				"command": "processing.sketch.run",
				"title": "Run the Processing Sketch",
				"icon": "media/start.svg"
			},
			{
				"command": "processing.sketch.stop",
				"title": "Stop the Processing Sketch",
				"icon": "media/stop.svg"
			},
			{
				"command": "processing.sketch.open",
				"title": "Open a Processing Sketch"
			},
			{
				"command": "processing.sketch.new",
				"title": "Create a new Processing Sketch",
				"icon": "$(new-file)"
			}
		],
		"keybindings": [
			{
				"command": "processing.sketch.run",
				"key": "ctrl+r",
				"when": "editorTextFocus && (editorLangId == Processing || editorLangId == java)",
				"mac": "cmd+r"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "processing.sketch.run",
					"when": "resourceExtname == .pde",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "processing.sketch.run",
					"when": "editorLangId == Processing || editorLangId == java",
					"group": "navigation"
				},
				{
					"command": "processing.sketch.stop",
					"when": "editorLangId == Processing || editorLangId == java",
					"group": "navigation"
				}
			],
			"view/title": [
				{
					"command": "processing.sketch.new",
					"when": "view == processingSidebarSketchbookView",
					"group": "navigation"
				}
			],
			"terminal/context": [
				{
					"command": "processing.sketch.run",
					"group": "navigation"
				},
				{
					"command": "processing.sketch.stop",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Processing",
			"properties": {
				"processing.version": {
					"scope": "machine",
					"type": "string",
					"default": "latest",
					"description": "The version of the Processing to use. The latest version is used by default."
				},
				"processing.autosave": {
					"scope": "window",
					"type": "boolean",
					"default": true,
					"description": "Automatically save the sketch before running it."
				},
				"processing.newWindow": {
					"scope": "window",
					"type": "boolean",
					"default": true,
					"description": "Open sketches in a new window. If disabled, the current window will be reused."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "processingSidebar",
					"title": "Processing",
					"icon": "media/processing-flat-color.svg"
				}
			],
			"panel": [
				{
					"id": "processingConsole",
					"title": "Processing Console",
					"icon": "media/processing-flat-color.svg"
				}
			]
		},
		"views": {
			"processingConsole": [
				{
					"type": "webview",
					"id": "processingConsoleView",
					"name": "Console",
					"icon": "media/processing-flat-color.svg"
				}
			],
			"processingSidebar": [
				{
					"type": "tree",
					"id": "processingSidebarSketchbookView",
					"name": "Sketchbook",
					"icon": "media/processing-flat-color.svg"
				},
				{
					"type": "tree",
					"id": "processingSidebarExamplesView",
					"name": "Examples",
					"icon": "media/processing-flat-color.svg"
				}
			]
		},
		"languages": [
			{
				"id": "Processing",
				"extensions": [
					".pde"
				],
				"icon": {
					"light": "media/processing-icon.svg",
					"dark": "media/processing-icon.svg"
				},
				"configuration": "./syntaxes/processing-language.json"
			}
		],
		"grammars": [
			{
				"language": "Processing",
				"scopeName": "source.pde",
				"path": "./syntaxes/processing.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"tree-kill": "^1.2.2"
	}
}
